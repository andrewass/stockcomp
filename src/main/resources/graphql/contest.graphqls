enum ContestStatus {
    AWAITING_START
    RUNNING
    STOPPED
    COMPLETED
}

type Participant{
    username : String!
    rank: Int!
    totalValue: Float
    remainingFunds: Float,
    country: String,
}

type Contest{
    id: ID
    startTime: LocalDateTime!
    endTime: LocalDateTime
    contestNumber: Int!
    participantCount: Int
    contestStatus: ContestStatus!
    leaderboardUpdateStatus: String!
}

type ContestParticipant{
    contest: Contest!
    participant: Participant
}

type Investment{
    symbol: String!
    amount: Int!
    averageUnitCost: Float!
    totalValue: Float!
    totalProfit: Float!
}

extend type Query {
    contest(contestNumber : Int) : Contest

    contests(statusList: [ContestStatus!]) : [Contest!]

    contestParticipants(statusList: [ContestStatus!]) : [ContestParticipant!]

    investment(symbol: String, contestNumber : Int) : Investment

    investments(contestNumber : Int) : [Investment!]
}

type Mutation {
    signUpContest(contestNumber : Int) : Long
}